<div class="content-wrapper mt-5">
  <div class="container-fluid mt-4">

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/message">Message</a></li>
      <li class="breadcrumb-item active"> 
        <% params[:id] %> </li>
      </ol>

      <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-area-chart"></i>
          <% @message.title %>
        </div>
        <div class="card-body">
          <div class="container">
            <form>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">Addresser</label>
                <div class="col-sm-10">
                  <% User.find(@message.user_id).email %>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">Receiver</label>
                <div class="col-sm-10">
                  <% User.find(@message.usersend_id).email %>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">Content</label>
                <div class="col-sm-10">
                  <% @message.content %>
                </div>
              </div>




            </form>
          </div>
        </div>
      </div>
      <div class="card-footer small text-muted"></div>
    </div>
  </div>